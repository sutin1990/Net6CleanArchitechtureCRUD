
@inject DialogService dialogService
     
<div>
    <p Style="margin-bottom: 1rem">Confirm?</p>
    <div class="row">
        <div class="col-md-12">
            <RadzenButton Text="Ok" Click="() => Close(true)" Style="margin-bottom: 10px; width: 150px" />
            <RadzenButton Text="Cancel" Click="() => Close(false)" ButtonStyle="ButtonStyle.Secondary" Style="margin-bottom: 10px; width: 150px" />

        </div>
    </div>
</div>
  
@code {
    protected override async  void OnInitialized()
    {



    }

    void Close(bool res)
    {
        dialogService.Close(res);
    }
}